@model LMS_API.Models.Author.Author
@{
    ViewData["Title"] = "AuthorDetail";
}

<h1>AuthorDetail</h1>
<div class="container">

    <table width="500px;">
        <tr>
            <td><b>@Html.DisplayNameFor(m=>m.AuthorName):</b></td>
            <td>@Html.DisplayFor(m=>m.AuthorName)</td>
        </tr>

        <tr>
            <td><b>@Html.DisplayNameFor(m=>m.AuthorUserName):</b></td>
            <td>@Html.DisplayFor(m=>m.AuthorUserName)</td>
        </tr>

        <tr>
            <td><b>@Html.DisplayNameFor(m=>m.Address):</b></td>
            <td>@Html.DisplayFor(m=>m.Address)</td>
        </tr>

        <tr>
            <td><b>@Html.DisplayNameFor(m=>m.PhoneNumber):</b></td>
            <td>@Html.DisplayFor(m=>m.PhoneNumber)</td>
        </tr>

        <tr>
            <td><b>@Html.DisplayNameFor(m=>m.Email):</b></td>
            <td>@Html.DisplayFor(m=>m.Email)</td>
        </tr>

        

        <tr>
            <td>
                <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this!! ');" asp-action="DeleteAuthor" asp-controller="AuthorConsume" asp-route-id="@Model.ID">Delete</a> |
                <a class="btn btn-sm btn-info float-right 2" asp-action="Index" asp-controller="AuthorConsume">Back To List</a>
            </td>

        </tr>

    </table>


</div>
