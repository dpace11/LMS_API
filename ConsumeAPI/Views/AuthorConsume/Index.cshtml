@model IEnumerable<LMS_API.Models.Author.Author>
<h4 class="text-center">Author Details</h4>
<div class="container">
    <div class="row">
        <div>
        <a class="btn btn-sm btn-primary m-2  float-right" asp-action="AddAuthor" asp-controller="AuthorConsume">Add Author</a>

        <table class="table table-bordered table-striped table-hover" >
            <thead class=" text-center">
               <tr> 
                    <th>Author Name</th>
                    <th>Author Username</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            
            </thead>

            <tbody class="text-center">
                @if(Model.Count()>0)
                {
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.AuthorName</td>
                            <td>@d.AuthorUserName</td>
                            <td>@d.Address</td>
                            <td>@d.PhoneNumber</td>
                            <td>@d.Email</td>
                            <td>
                                    <a class="btn btn-sm btn-primary" asp-action="EditAuthor" asp-controller="AuthorConsume" asp-route-id="@d.ID">Edit</a> |
                                    <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this!! ');" asp-action="DeleteAuthor" asp-controller="AuthorConsume" asp-route-id="@d.ID">Delete</a> |
                                    <a class="btn btn-sm btn-warning" asp-action="AuthorDetail" asp-controller="AuthorConsume" asp-route-id="@d.ID">Details</a>
                            </td>
                        </tr>                        
                    }
                }
                else
                {
                    <tr class="text-center">
                        <td colspan="7"><h2 class="text-warning bg-yellow">No record in Database!!</h2></td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </div>
</div>
