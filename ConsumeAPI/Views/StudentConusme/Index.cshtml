@model IEnumerable<LMS_API.Models.Student.Students>
@{
    ViewData["Title"] = "Index";
}

<h4 class="text-center">Student Details</h4>
<div class="container">
    <div class="row">
        <div >
            <a class="btn btn-sm btn-primary m-2  float-right" asp-action="AddStudent" asp-controller="StudentConusme">Add Student</a>
            <table class="table table-bordered table-striped table-hover" width="750px;">
                <thead class=" text-center">
                    @*<th>ID</th>*@
                    <th>Roll No</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Semester</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Actions</th>
                    
                </thead>
                <tbody class="text-center">
                    @if (Model.Count() > 0)
                    {
                        @foreach (var d in Model)
                        {
                            <tr>
                                @*<td width="50px;" height="100px;">@d.StudentID</td>*@
                                <td>@d.StudentRollNo</td>
                                <td>@d.StudentName</td>
                                <td>@d.Department</td>
                                <td>@d.Semester</td>
                                <td>@d.StudentContact</td>
                                <td>@d.StudentEmail</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="EditStudent" asp-controller="StudentConusme" asp-route-id="@d.StudentID">Edit</a> |
                                <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this!! ');" asp-action="DeleteStudent" asp-controller="StudentConusme" asp-route-id="@d.StudentID">Delete</a> |
                                <a class="btn btn-sm btn-warning" asp-action="StudentDetails" asp-controller="StudentConusme" asp-route-id="@d.StudentID">Details</a>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center" >
                            <td colspan="7"><h2 class="text-warning bg-yellow">No record in Database!!</h2></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

