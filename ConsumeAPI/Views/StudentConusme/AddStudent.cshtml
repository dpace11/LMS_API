@model LMS_API.Models.Student.Students
@{
    ViewData["Title"] = "AddStudent";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-dark p-4 rounded rounded-top">
           @* @if(Model!=null && Model.StudentID !=Guid.Empty)
            {
                <h1 class="text-center card-header text-warning m-1 p-2">Update Student Details</h1>
            }
            else
            {*@
                <h1 class="text-center card-header text-info m-1 p-2">Add Student Details</h1>
           @* }*@

            <form method="post" asp-action="AddStudent">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="StudentRollNo"></label>
                    <input type="text" asp-for="StudentRollNo" class="form-control" placeholder="Enter Name"></input>
                    <span asp-validation-for="StudentRollNo"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StudentName"></label>
                    <input type="text" asp-for="StudentName" class="form-control" placeholder="Enter Name"></input>
                    <input type="hidden"/>
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Department"></label>
                    <select class="form-control" asp-for="Department">

                        <option value="Architecture">Architecture</option>
                        <option value="Civil">Civil</option>
                        <option value="Computer">Computer</option>
                        <option value="Electronics">Electronics</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Semester" class="control-label"></label>
                    <input asp-for="Semester" class="form-control" />
                    <span asp-validation-for="Semester" class="text-danger"></span>                    
                </div>

                <div class="form-group">
                    <label asp-for="StudentContact" class="control-label"></label>
                    <input asp-for="StudentContact" class="form-control" />
                    <span asp-validation-for="StudentContact" class="text-danger"/>
                </div>

                <div class="form-group">
                    <label asp-for="StudentEmail" class="control-label"></label>
                    <input asp-for="StudentEmail" class="form-control" />
                    <span asp-validation-for="StudentEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                   
                  @*  @if (Model.StudentID != Guid.Empty)
                    {
                        <input type="submit" value="Update" class="btn btn-sm btn-warning float-right mt-2 p-2"></input>
                    }
                    else
                    {*@
                        <input type="submit" value="Add Student"  class="btn btn-sm btn-primary float-right mt-2 p-2"></input>
                  @*  }*@
                </div>
            </form>
        </div>

    </div>
</div>
@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
