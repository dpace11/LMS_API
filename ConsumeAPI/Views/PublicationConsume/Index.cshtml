@model IEnumerable<LMS_API.Models.Publication.Publication>

    <h4 class="text-center">Publication Details</h4>
<div class="container">
    <div class="row">
        <a asp-action="AddPublication" asp-controller="PublicationConsume" class="btn  btn-primary m-2  float-right" style="width:150px;">Add Publications</a>

        <table class="table table-bordered table-striped table-hover" >
            <thead class="text-center">
                <tr>
                   @* <td>ID</td>*@
                   <b> <td>Publication Name</td></b>
                  <b>   <td>Publication Address</td></b>
                    <b> <td>Publication Contact</td></b>
                    <b><td>Publication Email</td></b>
                    <b><td>Actions</td>
                </tr>
            </thead>

            <tbody class="text-center">
                @if (Model.Count() > 0)
                {
                    @foreach (var d in Model)
                    {
                     
                        <tr>
                            @*<td>@d.ID</td>*@
                            <td>@d.PublicationName</td>
                            <td>@d.PubAddress</td>
                            <td>@d.PublicationPhNumber</td>
                            <td>@d.Email</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="EditPublication" asp-controller="PublicationConsume" asp-route-id="@d.ID">Edit</a>|
                                <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this!! ');" asp-action="DeletePublication" asp-controller="PublicationConsume" asp-route-id="@d.ID">Delete</a>|
                                <a class="btn btn-sm btn-warning" asp-action="PublicationDetail" asp-controller="PublicationConsume" asp-route-id="@d.ID">Details</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="text-center">
                        <td colspan="7"><h2 class="text-warning bg-yellow">No record in Database!!</h2></td>
                    </tr>                    
                }
            </tbody>

        </table>
    </div>

</div>
